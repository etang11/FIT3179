{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {"url": "https://raw.githubusercontent.com/etang11/FIT3179/master/AB_NYC_2019.csv"},
    "title": "Heat Map - Property Type Average Price Per Night",
    "mark": "rect",
    "width": 375,
    "height": 300,
    "encoding": {
      "x": {
        "field": "room_type",
        "title":"Property Type",
        "type": "nominal",
        "axis": {
            "labelAngle": 360
        }
    },
      "y": {
        "field": "neighbourhood_group",
        "type": "nominal",
        "title": "Borough"
      },
      "color": {
    "aggregate": "average",
    "field": "price",
    "title": "Price Per Night",
    "type": "quantitative",
    "scale": {
      "domain": [
        50,
        100,
        200,
        400,
        500,
        600
      ],
      "range": [
        "#ffffb2",
        "#fecc5c",
        "#fd8d3c",
        "#f03b20",
        "#bd0026"
      ]
    }
  },
  "tooltip": [
    {"field": "price", "aggregate":"average", "title": "Average Price", "format":".2f"}
  ]
    },
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }
  


  